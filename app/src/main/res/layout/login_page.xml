<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/testbg3"
    tools:context=".auth.LoginPage">

    <ImageView
        android:id="@+id/backgroundImageLogin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/testbg3"
        android:scaleType="centerCrop"
        android:contentDescription="@null"
        android:importantForAccessibility="no"/>

    <LinearLayout
        android:id="@+id/loginContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:background="@drawable/blur_bg"
        android:elevation="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:id="@+id/logo"
                android:src="@drawable/logo"
                android:contentDescription="@string/logo"
                android:layout_gravity="center_horizontal"/>



            <TextView
                android:id="@+id/loginLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:text="@string/welcome_to_mcjerry"
                android:textColor="#000000"
                android:fontFamily="@font/quicksand"
                android:textStyle="bold"
                android:textSize="26sp">
            </TextView>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:id="@+id/mailLayoutLogin"
                android:hint="@string/email_address_name"
                app:boxCornerRadiusTopStart="30dp"
                app:boxCornerRadiusTopEnd="30dp"
                app:boxCornerRadiusBottomEnd="30dp"
                app:boxCornerRadiusBottomStart="30dp"
                app:hintTextColor="@color/white"
                app:boxStrokeColor="#ffff"
                app:startIconDrawable="@drawable/pfp_logo2">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/mailET"
                    android:inputType="textEmailAddress"
                    android:fontFamily="@font/quicksand"
                    android:textStyle="bold"
                    android:paddingStart="48dp"
                    android:paddingEnd="16dp"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:id="@+id/passwordLayoutLogin"
                android:hint="@string/password"
                app:boxCornerRadiusTopStart="30dp"
                app:boxCornerRadiusTopEnd="30dp"
                app:boxCornerRadiusBottomEnd="30dp"
                app:boxCornerRadiusBottomStart="30dp"
                app:hintTextColor="@color/white"
                app:boxStrokeColor="#ffff"
                app:startIconDrawable="@drawable/lock_logo"
                app:endIconMode="password_toggle">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/passwordET"
                    android:inputType="textPassword"
                    android:fontFamily="@font/quicksand"
                    android:textStyle="bold"
                    android:paddingStart="48dp"
                    android:paddingEnd="16dp"/>

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Replace the CheckBox and TextView section with this: -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp">

                <CheckBox
                    android:id="@+id/checkBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/remember_me"
                    android:fontFamily="@font/quicksand"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/forget_password"
                    android:fontFamily="@font/quicksand"
                    android:textSize="16sp"
                    android:textColor="#1A1A1A"
                    android:clickable="true"
                    android:focusable="true" />

            </LinearLayout>

            <Button
                android:id="@+id/loginButton"
                android:layout_width="280dp"
                android:layout_height="52dp"
                android:text="@string/login"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:fontFamily="@font/quicksand"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="#064200"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.672" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/registerTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/don_t_have_an_account_register"
                    android:fontFamily="@font/quicksand"
                    android:textColor="#1A1A1A"
                    android:textSize="16sp"
                    android:clickable="true"
                    android:focusable="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.497"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.754" />



            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>