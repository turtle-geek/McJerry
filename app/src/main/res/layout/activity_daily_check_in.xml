<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/quizRootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/testbg2"
    tools:context=".ui.DailyCheckInActivity">

    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/testbg2"
        android:scaleType="centerCrop"
        android:contentDescription="@null"
        android:importantForAccessibility="no"/>

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#064200"
        android:padding="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_revert"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="centerInside"
            android:padding="5dp"
            app:tint="@color/white"
            android:contentDescription="Back"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/mcjerry"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:fontFamily="times"
            android:gravity="center"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="40dp"
            android:layout_height="40dp">

            <ImageButton
                android:id="@+id/bell"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/bell_logo"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:padding="1dp"
                app:tint="@color/white"
                android:contentDescription="@string/reminder_button"/>

            <!-- SOS Button -->
            <ImageButton
                android:id="@+id/sosButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:padding="1dp"
                android:scaleType="centerInside"
                android:src="@drawable/sos_button"
                android:visibility="gone"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/quizHeaderContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:background="#ABFFFFFF"
        app:layout_constraintTop_toBottomOf="@id/topBar">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Daily Asthma Check-in"
            android:textSize="28sp"
            android:textStyle="bold"
            android:fontFamily="@font/quicksand"
            android:textColor="@color/black"
            android:paddingBottom="5dp"
            android:gravity="center"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"/>

        <TextView
            android:id="@+id/headerDateText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please complete this entry for today."
            android:textSize="16sp"
            android:textColor="#555555"
            android:paddingBottom="5dp"
            android:gravity="center"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"/>
    </LinearLayout>

    <ScrollView
        android:id="@+id/quizContentScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:paddingTop="0dp"
        android:paddingBottom="24dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/quizHeaderContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/transparent" >

            <LinearLayout
                android:id="@+id/quizContentContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#D0FFFFFF"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingTop="10dp"
                android:paddingEnd="20dp"
                android:paddingBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:paddingBottom="4dp"
                    android:text="1. Who is filling out this form?"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" /> <RadioGroup
                android:id="@+id/radioGroupAuthor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"  android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rbChildEntered"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:text="Child"
                    app:buttonTint="@color/check_box_selector_color" />

                <RadioButton
                    android:id="@+id/rbParentEntered"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Parent"
                    app:buttonTint="@color/check_box_selector_color" />

            </RadioGroup>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:paddingBottom="4dp"
                    android:text="2. Did you have asthma night wakings?"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" /> <RadioGroup
                android:id="@+id/radioGroupNightWaking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"  android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rbWakingYes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:text="Yes"
                    app:buttonTint="@color/check_box_selector_color" />

                <RadioButton
                    android:id="@+id/rbWakingNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:text="No"
                    app:buttonTint="@color/check_box_selector_color" />
            </RadioGroup>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:paddingBottom="4dp"
                    android:text="3. Activity limits due to asthma?"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" /> <LinearLayout
                android:id="@+id/activityLimitsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"  android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:text="No Limits"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <RadioGroup
                    android:id="@+id/radioGroupActivityLimits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rbLimit0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="3dp"
                        android:text=""
                        app:buttonTint="@color/check_box_selector_color" />

                    <RadioButton
                        android:id="@+id/rbLimit1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="3dp"
                        android:text=""
                        app:buttonTint="@color/check_box_selector_color" />

                    <RadioButton
                        android:id="@+id/rbLimit2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="3dp"
                        android:text=""
                        app:buttonTint="@color/check_box_selector_color" />
                </RadioGroup>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="Very Limited"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"  android:paddingBottom="6dp"  android:text="4. How bad was your coughing today?"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/coughWheezeContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"  android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:text="Minimal"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <RadioGroup
                        android:id="@+id/radioGroupCoughWheeze"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rbCough1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text=""
                            app:buttonTint="@color/check_box_selector_color" />

                        <RadioButton
                            android:id="@+id/rbCough2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text=""
                            app:buttonTint="@color/check_box_selector_color" />

                        <RadioButton
                            android:id="@+id/rbCough3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text=""
                            app:buttonTint="@color/check_box_selector_color" />

                        <RadioButton
                            android:id="@+id/rbCough4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text=""
                            app:buttonTint="@color/check_box_selector_color" />

                        <RadioButton
                            android:id="@+id/rbCough5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text=""
                            app:buttonTint="@color/check_box_selector_color" />
                    </RadioGroup>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:text="Severe"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:paddingBottom="4dp"
                    android:text="5. What caused your symptoms today?"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" /> <GridLayout
                android:id="@+id/triggerGridLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginBottom="16dp"  android:columnCount="2"
                android:rowCount="3"
                android:useDefaultMargins="false">

                <CheckBox
                    android:id="@+id/cbExercise"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="4dp"
                    android:text="Exercise"
                    app:buttonTint="@color/check_box_selector_color" />

                <CheckBox
                    android:id="@+id/cbColdAir"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="4dp"
                    android:text="Cold Air"
                    app:buttonTint="@color/check_box_selector_color" />

                <CheckBox
                    android:id="@+id/cbDustPets"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="4dp"
                    android:text="Dust/Pets"
                    app:buttonTint="@color/check_box_selector_color" />

                <CheckBox
                    android:id="@+id/cbSmoke"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="4dp"
                    android:text="Smoke"
                    app:buttonTint="@color/check_box_selector_color" />

                <CheckBox
                    android:id="@+id/cbIllness"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="0dp"
                    android:text="Illness"
                    app:buttonTint="@color/check_box_selector_color" />

                <CheckBox
                    android:id="@+id/cbStrongOdors"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="0dp"
                    android:text="Strong Odors/Perfumes"
                    app:buttonTint="@color/check_box_selector_color" />
            </GridLayout>

                <Button
                    android:id="@+id/btnSubmitCheckIn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="0dp"
                    android:backgroundTint="#064200"
                    android:paddingStart="15dp"
                    android:paddingTop="4dp"
                    android:paddingEnd="15dp"
                    android:paddingBottom="4dp"
                    android:text="SUBMIT DAILY CHECK-IN"
                    android:textColor="@color/white" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>