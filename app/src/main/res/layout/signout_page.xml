<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/morePage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/testbg2"
    tools:context=".auth.SignOut">

    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/testbg2"
        android:scaleType="centerCrop"
        android:contentDescription="@null"
        android:importantForAccessibility="no"/>

    <!-- Top Bar with Profile -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#064200"
        android:padding="24dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/pfp_logo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/pfp_logo"
            android:background="@drawable/circle_background"
            android:scaleType="centerCrop"
            app:tint="@color/gray"/>

        <TextView
            android:id="@+id/userNameText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Rachel Wong"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:fontFamily="@font/quicksand"
            android:paddingStart="20dp"
            android:paddingEnd="16dp"/>

    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toTopOf="@id/menuBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Medication History Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/medicationHistoryCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#ABFFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@android:drawable/ic_menu_recent_history"
                        android:contentDescription="Medication History Icon"
                        app:tint="#064200"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Medication History"
                        android:textSize="18sp"
                        android:textColor="#064200"
                        android:fontFamily="@font/quicksand"
                        android:textStyle="bold"
                        android:paddingStart="20dp"
                        android:paddingEnd="16dp"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_more"
                        android:contentDescription="Arrow"
                        app:tint="#8A90A5"
                        android:rotation="270"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Invite Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/inviteCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#ABFFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@android:drawable/ic_menu_share"
                        android:contentDescription="Invite Icon"
                        app:tint="#064200"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Invite"
                        android:textSize="18sp"
                        android:textColor="#064200"
                        android:fontFamily="@font/quicksand"
                        android:textStyle="bold"
                        android:paddingStart="20dp"
                        android:paddingEnd="16dp"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_more"
                        android:contentDescription="Arrow"
                        app:tint="#8A90A5"
                        android:rotation="270"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Report Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/reportCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#ABFFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@android:drawable/ic_menu_report_image"
                        android:contentDescription="Report Icon"
                        app:tint="#064200"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Print History"
                        android:textSize="18sp"
                        android:textColor="#064200"
                        android:fontFamily="@font/quicksand"
                        android:textStyle="bold"
                        android:paddingStart="20dp"
                        android:paddingEnd="16dp"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_more"
                        android:contentDescription="Arrow"
                        app:tint="#8A90A5"
                        android:rotation="270"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Logout Button -->
            <Button
                android:id="@+id/LogoutButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="16dp"
                android:text="@string/log_out"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:fontFamily="@font/quicksand"
                android:textStyle="bold"
                android:backgroundTint="#064200"/>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/menuBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#064200"
        app:itemBackground="@drawable/circle_background"
        app:itemIconTint="#8A90A5"
        app:itemTextColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:menu="@menu/menu"/>

</androidx.constraintlayout.widget.ConstraintLayout>