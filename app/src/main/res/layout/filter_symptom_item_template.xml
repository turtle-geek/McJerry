<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="6dp">

    <LinearLayout
        android:id="@+id/filterHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#FAFAFA"
        android:paddingVertical="4dp"
        android:paddingHorizontal="8dp">

        <ImageButton
            android:id="@+id/btnToggleDropdown"
            android:layout_width="30dp" android:layout_height="30dp" android:src="@drawable/ic_arrow_down"
            android:background="@android:color/transparent"
            android:contentDescription="Toggle filter options"
            android:layout_marginEnd="8dp"/>

        <CheckBox
            android:id="@+id/cbFilterMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filter Label"
            android:textStyle="bold"
            android:textSize="14sp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:minHeight="0dp"          android:minWidth="0dp"           android:padding="0dp"            android:layout_margin="0dp" />   <Space android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/filterDropdownOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingTop="3dp"
        android:visibility="gone"
        android:background="#FFFFFF">

        <CheckBox android:id="@+id/cbOption1" android:text="Option 1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <CheckBox android:id="@+id/cbOption2" android:text="Option 2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <CheckBox android:id="@+id/cbOption3" android:text="Option 3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>