<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/registerPage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/testbg1"
    tools:context=".auth.Register">

    <ImageView
        android:id="@+id/backgroundImageRegister"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/testbg3"
        android:scaleType="centerCrop"
        android:contentDescription="@null"
        android:importantForAccessibility="no"/>

    <!-- ADDED ScrollView HERE -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/registerContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="32dp"
                android:background="@drawable/blur_bg"
                android:elevation="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/register"
                        android:textColor="#000000"
                        android:fontFamily="@font/quicksand"
                        android:textStyle="bold"
                        android:textSize="26sp"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:id="@+id/nameLayoutRegister"
                        android:hint="@string/legalName"
                        app:boxCornerRadiusTopStart="30dp"
                        app:boxCornerRadiusTopEnd="30dp"
                        app:boxCornerRadiusBottomEnd="30dp"
                        app:boxCornerRadiusBottomStart="30dp"
                        app:startIconDrawable="@drawable/pfp_logo2">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="328dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/nameETRegister"
                            android:inputType="textPersonName"
                            android:fontFamily="@font/quicksand"
                            android:textStyle="bold"
                            android:paddingStart="48dp"
                            android:paddingEnd="16dp"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:id="@+id/mailLayoutRegister"
                        android:hint="@string/email_address_name"
                        app:boxCornerRadiusTopStart="30dp"
                        app:boxCornerRadiusTopEnd="30dp"
                        app:boxCornerRadiusBottomEnd="30dp"
                        app:boxCornerRadiusBottomStart="30dp"
                        app:startIconDrawable="@drawable/pfp_logo2">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="328dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/mailETRegister"
                            android:inputType="textEmailAddress"
                            android:fontFamily="@font/quicksand"
                            android:textStyle="bold"
                            android:paddingStart="48dp"
                            android:paddingEnd="16dp"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:id="@+id/passwordLayoutRegister"
                        android:hint="@string/password"
                        app:boxCornerRadiusTopStart="30dp"
                        app:boxCornerRadiusTopEnd="30dp"
                        app:boxCornerRadiusBottomEnd="30dp"
                        app:boxCornerRadiusBottomStart="30dp"
                        app:startIconDrawable="@drawable/lock_logo"
                        app:endIconMode="password_toggle">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="328dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/passwordETRegister"
                            android:inputType="textPassword"
                            android:fontFamily="@font/quicksand"
                            android:textStyle="bold"
                            android:paddingStart="48dp"
                            android:paddingEnd="16dp"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:id="@+id/confirmPasswordLayoutRegister"
                        android:hint="@string/confirmPassword"
                        app:boxCornerRadiusTopStart="30dp"
                        app:boxCornerRadiusTopEnd="30dp"
                        app:boxCornerRadiusBottomEnd="30dp"
                        app:boxCornerRadiusBottomStart="30dp"
                        app:startIconDrawable="@drawable/lock_logo"
                        app:endIconMode="password_toggle">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="328dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/confirmPasswordETRegister"
                            android:inputType="textPassword"
                            android:fontFamily="@font/quicksand"
                            android:textStyle="bold"
                            android:paddingStart="48dp"
                            android:paddingEnd="16dp"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <Button
                        android:id="@+id/loginBotton"
                        android:layout_width="280dp"
                        android:layout_height="52dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        android:text="@string/register"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/quicksand"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"
                        android:backgroundTint="#064200"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>