<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/identity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/testbg1"
    tools:context=".auth.LoginPage">

    <ImageView
        android:id="@+id/backgroundImageIdentity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/testbg1"
        android:scaleType="centerCrop"
        android:contentDescription="@null"
        android:importantForAccessibility="no"/>

    <LinearLayout
        android:id="@+id/loginContainerIdentity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:background="@drawable/blur_bg"
        android:elevation="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="What is Your Role?"
                android:textColor="#000000"
                android:fontFamily="times"
                android:textStyle="bold"
                android:textSize="26sp">
            </TextView>

            <Button
                android:id="@+id/parentButton"
                android:layout_width="280dp"
                android:layout_height="52dp"
                android:layout_marginTop="19dp"
                android:text="Parent"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="times"
                android:layout_gravity="center_horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.672" />

            <Button
                android:id="@+id/childernButton"
                android:layout_width="280dp"
                android:layout_height="52dp"
                android:layout_marginTop="19dp"
                android:text="Childern"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="times"
                android:layout_gravity="center_horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.672" />

            <Button
                android:id="@+id/DoctorButton"
                android:layout_width="280dp"
                android:layout_height="52dp"
                android:layout_marginTop="19dp"
                android:text="Doctor"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="times"
                android:layout_gravity="center_horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.672" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>