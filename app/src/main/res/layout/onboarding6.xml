<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/testbg3"
    tools:context=".auth.LoginPage">

    <ImageView
        android:id="@+id/backgroundImageLogin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/testbg3"
        android:scaleType="centerCrop"
        android:contentDescription="@null"
        android:importantForAccessibility="no"/>

    <LinearLayout
        android:id="@+id/loginContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:background="@drawable/blur_bg"
        android:elevation="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:id="@+id/logo"
                android:src="@drawable/logo"
                android:contentDescription="@string/logo"
                android:layout_gravity="center_horizontal"/>



            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Privacy and Sharing"
                android:textColor="#000000"
                android:fontFamily="@font/quicksand"
                android:textStyle="bold"
                android:textSize="26sp">
            </TextView>

            <TextView
                android:id="@+id/subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Default Privacy:"
                android:textColor="#000000"
                android:fontFamily="@font/quicksand"
                android:textStyle="bold"
                android:textSize="20sp">
            </TextView>

            <TextView
                android:id="@+id/line1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Children see only their own data"
                android:textColor="#000000"
                android:fontFamily="@font/quicksand"
                android:textSize="14sp">
            </TextView>

            <TextView
                android:id="@+id/line2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Providers see NOTHING by default"
                android:textColor="#000000"
                android:fontFamily="@font/quicksand"
                android:textSize="14sp">
            </TextView>

            <TextView
                android:id="@+id/subtitle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Parent Controls:"
                android:textColor="#000000"
                android:fontFamily="@font/quicksand"
                android:textStyle="bold"
                android:textSize="20sp">
            </TextView>

            <TextView
                android:id="@+id/line3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Parents choose exactly what providers can see:"
                android:textColor="#000000"
                android:fontFamily="@font/quicksand"
                android:textSize="14sp">
            </TextView>

            <TextView
                android:id="@+id/line4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:text="Rescue logs, controller adherence, symptoms, triggers, peak flow, triage incidents, charts"
                android:textColor="#000000"
                android:fontFamily="@font/quicksand"
                android:textSize="14sp">
            </TextView>

            <TextView
                android:id="@+id/line5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:text="Toggles apply instantly and are reversible anytime"
                android:textColor="#000000"
                android:fontFamily="@font/quicksand"
                android:textSize="14sp">
            </TextView>

            <TextView
                android:id="@+id/line6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:text="Provider access can be revoked at any moment"
                android:textColor="#000000"
                android:fontFamily="@font/quicksand"
                android:textSize="14sp">
            </TextView>


            <Button
                android:id="@+id/nextButton"
                android:layout_width="280dp"
                android:layout_height="52dp"
                android:text="@string/next"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:fontFamily="@font/quicksand"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="#064200"
                android:layout_marginBottom="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.672" />


        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>