<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/managementPage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/testbg1"
    tools:context=".LoginPage">

    <ImageView
        android:id="@+id/backgroundImageMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/testbg1"
        android:scaleType="centerCrop"
        android:contentDescription="@null"
        android:importantForAccessibility="no"/>

    <!-- Fixed Top Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#064200"
        android:padding="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Title in the middle (takes up remaining space) -->
        <TextView
            android:id="@+id/pageTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/quicksand"
            android:textStyle="bold"
            android:text="@string/children_management"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"/>

        <!-- +Add Button on the right -->
        <Button
            android:id="@+id/addContainerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="@string/add"
            android:textColor="@color/white"
            android:backgroundTint="#4CAF50"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"/>

    </LinearLayout>

    <!-- Empty State Message (visible when no children) -->
    <TextView
        android:id="@+id/emptyStateMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/quicksand"
        android:textStyle="bold"
        android:text="@string/click_quot_add_quot_to_add_children"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ScrollView below the fixed top bar -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toTopOf="@id/menuBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/childrenContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

