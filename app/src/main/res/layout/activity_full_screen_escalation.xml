<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF0000"
    tools:context=".ui.FullScreenEscalationNotification">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="160dp"
        android:src="@drawable/logo"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="49dp" />

    <TextView
        android:id="@+id/escalationText"
        android:layout_width="291dp"
        android:layout_height="75dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/quicksand"
        android:text="Are you OK?"
        android:textSize="45sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo" />

    <TextView
        android:id="@+id/escalationDescription"
        android:layout_width="332dp"
        android:layout_height="70dp"
        android:layout_marginTop="12dp"
        android:text="Calling 911 because you did not respond to the check-up"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/escalationText" />

    <com.ncorti.slidetoact.SlideToActView
        android:id="@+id/swipe_btn"
        android:layout_width="312dp"
        android:layout_height="75dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="148dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/escalationDescription"
        app:layout_constraintVertical_bias="1.0"

        app:outer_color="#064200"
        app:inner_color="#FFFFFF"
        app:border_radius="25dp"
        app:text="          DO NOT CALL 911, I'M OK"
        app:text_size="18sp"
        app:slider_locked="false" />



</androidx.constraintlayout.widget.ConstraintLayout>