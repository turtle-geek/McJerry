<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8F5E9">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#064200"
        android:padding="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_revert"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            tools:tint="@color/white"/>

        <TextView
            android:id="@+id/titleText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Medicine Log History"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"/>
    </LinearLayout>

    <!-- Scroll Content -->
    <ScrollView
        android:id="@+id/scrollViewLogs"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toTopOf="@+id/bottomToggleBar">

        <LinearLayout
            android:id="@+id/containerLogs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Example Log Entry Block (You will populate dynamically) -->
            <LinearLayout
                android:id="@+id/exampleEntry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/white"
                android:elevation="4dp"
                android:layout_marginBottom="12dp"
                android:clipToPadding="false"
                android:backgroundTint="@color/white">

                <TextView
                    android:id="@+id/tvLogLine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medicine: ExampleMed, Dosage: 2, Timestamp: 2025-11-26 00:00"
                    android:textSize="16sp"
                    android:textColor="#064200"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Toggle Bar -->
    <LinearLayout
        android:id="@+id/bottomToggleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="#064200"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tvControllerLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Controller"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_marginEnd="12dp"/>

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/switchLogFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvRescueLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rescue"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_marginStart="12dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
