<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/filterRootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/testbg2"
    tools:context=".ui.HistoryFilterActivity">

    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/testbg2"
        android:scaleType="centerCrop"
        android:contentDescription="@null"
        android:importantForAccessibility="no"/>

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#064200"
        android:padding="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_revert"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:padding="5dp"
            app:tint="@color/white"
            android:contentDescription="Back"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/mcjerry"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:fontFamily="times"
            android:gravity="center"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"/>

        <ImageButton
            android:id="@+id/bell"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/bell_logo"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:padding="1dp"
            app:tint="@color/white"
            android:contentDescription="@string/reminder_button"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/filterHeaderContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:background="#ABFFFFFF"
        app:layout_constraintTop_toBottomOf="@id/topBar">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="History Filter"
            android:textSize="28sp"
            android:textStyle="bold"
            android:fontFamily="@font/quicksand"
            android:textColor="@color/black"
            android:paddingBottom="5dp"
            android:gravity="center"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"/>

        <TextView
            android:id="@+id/filterDescriptionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select criteria to print historical logs."
            android:textSize="16sp"
            android:textColor="#555555"
            android:paddingBottom="5dp"
            android:gravity="center"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"/>
    </LinearLayout>

    <ScrollView
        android:id="@+id/filterContentScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:paddingTop="0dp"  android:paddingBottom="32dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/filterHeaderContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/transparent" >

            <LinearLayout
                android:id="@+id/filterContentContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingTop="20dp"
                android:paddingEnd="20dp"
                android:paddingBottom="20dp"
                android:background="#D0FFFFFF">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SYMPTOMS FILTER"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:paddingBottom="10dp"/>

                <LinearLayout
                    android:id="@+id/filterNightWaking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">
                    <LinearLayout
                        android:id="@+id/nwFilterHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="#FAFAFA"
                        android:paddingVertical="4dp"
                        android:paddingHorizontal="8dp">
                        <ImageButton
                            android:id="@+id/nwBtnToggleDropdown"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_arrow_down"
                            android:background="@android:color/transparent"
                            android:contentDescription="Toggle filter options"
                            android:layout_marginEnd="8dp"/>
                        <CheckBox
                            android:id="@+id/nwCbFilterMain"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Night Waking"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:paddingStart="4dp"
                            android:paddingEnd="4dp"
                            android:minHeight="0dp"
                            android:minWidth="0dp"
                            android:padding="0dp"
                            android:layout_margin="0dp"
                            app:buttonTint="@color/check_box_selector_color" /> <Space android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/nwFilterDropdownOptions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="20dp"
                        android:paddingTop="3dp"
                        android:visibility="gone"
                        android:background="#FFFFFF">
                        <CheckBox android:id="@+id/nwCbOptionYes" android:text="Yes" android:layout_width="match_parent" android:layout_height="wrap_content" app:buttonTint="@color/check_box_selector_color"/> <CheckBox android:id="@+id/nwCbOptionNo" android:text="No" android:layout_width="match_parent" android:layout_height="wrap_content" app:buttonTint="@color/check_box_selector_color"/> </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/filterActivityLimits"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">
                    <LinearLayout
                        android:id="@+id/alFilterHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="#FAFAFA"
                        android:paddingVertical="4dp"
                        android:paddingHorizontal="8dp">
                        <ImageButton
                            android:id="@+id/alBtnToggleDropdown"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_arrow_down"
                            android:background="@android:color/transparent"
                            android:contentDescription="Toggle filter options"
                            android:layout_marginEnd="8dp"/>
                        <CheckBox
                            android:id="@+id/alCbFilterMain"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Activity Limits"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:paddingStart="4dp"
                            android:paddingEnd="4dp"
                            android:minHeight="0dp"
                            android:minWidth="0dp"
                            android:padding="0dp"
                            android:layout_margin="0dp"
                            app:buttonTint="@color/check_box_selector_color" /> <Space android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/alFilterDropdownOptions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="20dp"
                        android:paddingTop="3dp"
                        android:visibility="gone"
                        android:background="#FFFFFF">
                        <CheckBox android:id="@+id/alCbOption0" android:text="0 (No Limits)" android:layout_width="match_parent" android:layout_height="wrap_content" app:buttonTint="@color/check_box_selector_color"/> <CheckBox android:id="@+id/alCbOption1" android:text="1 (A Bit Limited)" android:layout_width="match_parent" android:layout_height="wrap_content" app:buttonTint="@color/check_box_selector_color"/> <CheckBox android:id="@+id/alCbOption2" android:text="2 (Very Limited)" android:layout_width="match_parent" android:layout_height="wrap_content" app:buttonTint="@color/check_box_selector_color"/> </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/filterCoughWheeze"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">
                    <LinearLayout
                        android:id="@+id/cwFilterHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="#FAFAFA"
                        android:paddingVertical="4dp"
                        android:paddingHorizontal="8dp">
                        <ImageButton
                            android:id="@+id/cwBtnToggleDropdown"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_arrow_down"
                            android:background="@android:color/transparent"
                            android:contentDescription="Toggle filter options"
                            android:layout_marginEnd="8dp"/>
                        <CheckBox
                            android:id="@+id/cwCbFilterMain"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cough Wheeze"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:paddingStart="4dp"
                            android:paddingEnd="4dp"
                            android:minHeight="0dp"
                            android:minWidth="0dp"
                            android:padding="0dp"
                            android:layout_margin="0dp"
                            app:buttonTint="@color/check_box_selector_color" /> <Space android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/cwFilterDropdownOptions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="20dp"
                        android:paddingTop="3dp"
                        android:visibility="gone"
                        android:background="#FFFFFF">
                        <CheckBox android:id="@+id/cwCbOption0" android:text="0 (None)" android:layout_width="match_parent" android:layout_height="wrap_content" app:buttonTint="@color/check_box_selector_color"/> <CheckBox android:id="@+id/cwCbOption1" android:text="1 (Minimal)" android:layout_width="match_parent" android:layout_height="wrap_content" app:buttonTint="@color/check_box_selector_color"/> <CheckBox android:id="@+id/cwCbOption2" android:text="2 (Slight)" android:layout_width="match_parent" android:layout_height="wrap_content" app:buttonTint="@color/check_box_selector_color"/> <CheckBox android:id="@+id/cwCbOption3" android:text="3 (Moderate)" android:layout_width="match_parent" android:layout_height="wrap_content" app:buttonTint="@color/check_box_selector_color"/> <CheckBox android:id="@+id/cwCbOption4" android:text="4 (Severe)" android:layout_width="match_parent" android:layout_height="wrap_content" app:buttonTint="@color/check_box_selector_color"/> </LinearLayout>
                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TRIGGERS FILTER"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:paddingTop="20dp"
                    android:paddingBottom="10dp"/>

                <GridLayout
                    android:id="@+id/triggerFilterOptions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="3"
                    android:useDefaultMargins="false"
                    android:layout_marginBottom="24dp">  <CheckBox android:id="@+id/filterCbExercise" android:text="Exercise"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_columnWeight="1" android:layout_marginStart="0dp"
                    android:layout_marginEnd="12dp" android:layout_marginBottom="4dp"
                    app:buttonTint="@color/check_box_selector_color"/>
                    <CheckBox android:id="@+id/filterCbColdAir" android:text="Cold Air"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:layout_columnWeight="1" android:layout_marginStart="12dp"
                        android:layout_marginEnd="0dp" android:layout_marginBottom="4dp"
                        app:buttonTint="@color/check_box_selector_color"/>
                    <CheckBox android:id="@+id/filterCbDustPets" android:text="Dust/Pets"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:layout_columnWeight="1" android:layout_marginStart="0dp"
                        android:layout_marginEnd="12dp" android:layout_marginBottom="4dp"
                        app:buttonTint="@color/check_box_selector_color"/>
                    <CheckBox android:id="@+id/filterCbSmoke" android:text="Smoke"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:layout_columnWeight="1" android:layout_marginStart="12dp"
                        android:layout_marginEnd="0dp" android:layout_marginBottom="4dp"
                        app:buttonTint="@color/check_box_selector_color"/>
                    <CheckBox android:id="@+id/filterCbIllness" android:text="Illness"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:layout_columnWeight="1" android:layout_marginStart="0dp"
                        android:layout_marginEnd="12dp" android:layout_marginBottom="0dp"
                        app:buttonTint="@color/check_box_selector_color"/>
                    <CheckBox android:id="@+id/filterCbStrongOdors" android:text="Strong Odors/Perfumes"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:layout_columnWeight="1" android:layout_marginStart="12dp"
                        android:layout_marginEnd="0dp" android:layout_marginBottom="0dp"
                        app:buttonTint="@color/check_box_selector_color"/>
                </GridLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DATE RANGE FILTER"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:paddingTop="20dp"
                    android:paddingBottom="10dp"/>

                <LinearLayout
                    android:id="@+id/customRangeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible"
                    android:paddingHorizontal="8dp"
                    android:layout_marginBottom="16dp">  <TextView
                    android:id="@+id/tvStartDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/default_start_date"
                    android:textColor="@color/black"
                    android:background="@drawable/rounded_border"
                    android:padding="8dp"
                    android:gravity="center"
                    android:layout_marginEnd="8dp"
                    android:drawableStart="@drawable/ic_calendar"
                    android:drawablePadding="8dp"/>

                    <TextView
                        android:id="@+id/tvEndDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="End Date"
                        android:textColor="@color/black"
                        android:background="@drawable/rounded_border"
                        android:padding="8dp"
                        android:gravity="center"
                        android:drawableStart="@drawable/ic_calendar"
                        android:drawablePadding="8dp"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="* Filter range must be between 3 and 6 months."
                    android:textSize="12sp"
                    android:textColor="#FF0000"
                    android:gravity="center"
                    android:paddingBottom="10dp"/>


                <Button
                    android:id="@+id/btnApplyFilter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="0dp" android:text="PRINT PDF"
                    android:backgroundTint="#064200"
                    android:textColor="@color/white"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>