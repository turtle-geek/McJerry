<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#E8F5E9">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#064200"
        android:padding="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_revert"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            tools:tint="@color/white"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Medicine Details"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"/>

        <ImageButton
            android:id="@+id/btnEdit"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_edit"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Edit"
            tools:tint="@color/white"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Name Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Medicine"
                        android:textSize="14sp"
                        android:textColor="#757575"
                        android:paddingBottom="4dp"/>

                    <TextView
                        android:id="@+id/tvDetailMedicineName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Controller"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#064200"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Purchase Date Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingBottom="4dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@android:drawable/ic_menu_today"
                            tools:tint="#757575"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Purchase Date"
                            android:textSize="14sp"
                            android:textColor="#757575"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvDetailPurchaseDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="MM/DD/YYYY"
                        android:textSize="18sp"
                        android:textColor="#333333"
                        android:paddingStart="28dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Expiry Date Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingBottom="4dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@android:drawable/ic_menu_today"
                            tools:tint="#757575"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Expiry Date"
                            android:textSize="14sp"
                            android:textColor="#757575"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvDetailExpiryDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="MM/DD/YYYY"
                        android:textSize="18sp"
                        android:textColor="#333333"
                        android:paddingStart="28dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Remaining Amount Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingBottom="4dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@android:drawable/ic_menu_today"
                            tools:tint="#757575"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Remaining Amount"
                            android:textSize="14sp"
                            android:textColor="#757575"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvDetailAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="18sp"
                        android:textColor="#333333"
                        android:paddingStart="28dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Action Buttons + Status Icons -->
            <LinearLayout
                android:id="@+id/actionSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                app:layout_constraintBottom_toTopOf="@id/bottomToggleBar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Status Icons Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingBottom="12dp">

                    <!-- Low Capacity Icon -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iconLowCapacity"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@android:drawable/ic_dialog_alert"
                            tools:tint="#FFA000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Low Capacity"
                            android:textColor="#064200"
                            android:textSize="14sp"
                            android:paddingTop="4dp"/>
                    </LinearLayout>

                    <!-- Expired Icon -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iconExpired"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@android:drawable/ic_dialog_alert"
                            tools:tint="#9B0000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Expired"
                            android:textColor="#064200"
                            android:textSize="14sp"
                            android:paddingTop="4dp"/>
                    </LinearLayout>

                </LinearLayout>

                <!-- Buttons Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <!-- Consume Button -->
                    <Button
                        android:id="@+id/btnConsume"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Consume"
                        android:textColor="@color/white"
                        android:backgroundTint="#064200"
                        android:layout_marginEnd="8dp"/>

                    <!-- Refill Button -->
                    <Button
                        android:id="@+id/btnRefill"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Refill"
                        android:textColor="@color/white"
                        android:backgroundTint="#2E7D32"
                        android:layout_marginStart="8dp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>



    </ScrollView>

    <!-- Bottom Toggle Bar -->
    <LinearLayout
        android:id="@+id/bottomToggleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="#064200"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tvControllerLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Controller"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_marginEnd="12dp"/>

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/switchLogFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvRescueLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rescue"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_marginStart="12dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>